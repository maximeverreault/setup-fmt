{
  "name": "setup-fmt",
  "version": "1.0.0",
  "private": true,
  "description": "Download, build and install the FMT C++ library",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt -o dist/main src/main.ts",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test",
    "dev": "npm run build && node lib/main.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maximeverreault/setup-fmt.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup",
    "fmt",
    "cpp",
    "c++"
  ],
  "author": "Maxime Verreault",
  "license": "MIT",
  "dependencies": {
    "@actions/cache": "^3.2.1",
    "@actions/core": "^1.10.0",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^5.1.1",
    "@actions/glob": "^0.4.0",
    "@actions/http-client": "^2.1.0",
    "@actions/io": "^1.1.3",
    "@actions/tool-cache": "^2.0.1",
    "semver": "^7.3.8"
  },
  "devDependencies": {
    "@types/node": "^18.16.3",
    "@types/semver": "^7.3.13",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "@vercel/ncc": "^0.36.1",
    "eslint": "^8.38.0",
    "eslint-plugin-github": "^4.7.0",
    "eslint-plugin-jest": "^27.2.1",
    "jest": "^29.5.0",
    "js-yaml": "^4.1.0",
    "prettier": "2.8.7",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  }
}
